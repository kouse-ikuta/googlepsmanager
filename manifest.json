{
    "manifest_version": 2,
    "name": "Bluetooth Native Messaging Bridge",
    "version": "1.0",
    "description": "JavaScriptからC#を通じてAndroidとBluetooth通信を行います。",
    "permissions": [
        "nativeMessaging",
        "webRequestBlocking",
        "webRequest",
        "*://127.0.0.1/*"
    ],
    "browser_action": {
        "default_title": "Bluetooth Bridge",
        "default_popup": "popup.html"
    }
}